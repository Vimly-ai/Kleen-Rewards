  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+rewards",
      "url": "/handle-protocol?action=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "application/vnd.ms-excel": [".xlsx"]
      }
    }
  ],
  "permissions": [
    "notifications",
    "background-sync",
    "persistent-storage",
    "camera",
    "geolocation"
  ],
  "features": [
    "Cross Platform",
    "Offline Support",
    "Push Notifications",
    "Background Sync",
    "QR Code Scanning",
    "Real-time Updates",
    "Progressive Enhancement"
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.company.rewards",
      "id": "com.company.rewards"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/employee-rewards/id123456789"
    }
  ],
  "gcm_sender_id": "103953800507",
  "gcm_user_visible_only": true
